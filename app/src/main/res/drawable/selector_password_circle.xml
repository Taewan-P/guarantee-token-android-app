<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item
        android:id="@+id/password_checkbox_empty"
        android:drawable="@drawable/shape_password_empty"
        android:state_checked="false" />

    <item
        android:id="@+id/password_checkbox_filled"
        android:drawable="@drawable/shape_password_filled"
        android:state_checked="true" />

    <transition
        android:fromId="@+id/password_checkbox_empty"
        android:toId="@+id/password_checkbox_filled"
        android:drawable="@drawable/animation_list_password_checkbox"
        android:reversible="true" />

    <item android:drawable="@drawable/shape_password_empty" />

</animated-selector>